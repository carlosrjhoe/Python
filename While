texto = 'JOGO DE ADIVINHAÇÃO'
print('*' * 30)
print('{:^30}'.format(texto))
print('*' * 30)

secreto = 15
tentativas = 5

while tentativas > 0:
    chute = int(input('Digite o seu número [0 a 20]: '))
    print('Você digitou o número: {}'.format(chute))
    if chute == secreto:
        print('Você acertou')
        break
    elif chute > secreto:
        print('Você errou! O número secreto é menor que {}'.format(chute))
    elif chute < secreto:
        print('Você errou! O número secreto é maior que {}'.format(chute))
    tentativas = tentativas - 1
