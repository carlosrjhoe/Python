texto = 'JOGO DE ADIVINHAÇÃO'
print('*' * 45)
print('{:^45}'.format(texto))
print('*' * 45)

secreto = 15
tentativas = 5
rodada = 1

while tentativas > 0:
    print('Rodada {}'.format(rodada))
    chute = int(input('Digite o seu número [0 a 20]: '))
    if chute == secreto:
        print('Você acertou')
        break
    elif chute > secreto:
        print('Você errou! O número secreto é menor que {}'.format(chute))
    elif chute < secreto:
        print('Você errou! O número secreto é maior que {}'.format(chute))
    tentativas -= 1
    rodada += 1
